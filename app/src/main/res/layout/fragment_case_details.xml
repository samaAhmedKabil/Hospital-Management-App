<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0356341" />

    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.10"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_up"
        />

    <TextView
        android:id="@+id/case_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Case Details"
        android:textSize="20dp"
        android:textColor="#343434"
        app:layout_constraintBottom_toBottomOf="@id/arrow_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/arrow_back"
        app:layout_constraintTop_toTopOf="@id/arrow_back" />
    <TextView
        android:id="@+id/patient_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Name : "
        android:textSize="18dp"
        android:textColor="#989898"
        app:layout_constraintTop_toBottomOf="@id/case_details"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
         />
    <TextView
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sama Ahmed"
        android:textSize="18dp"
        android:textColor="#000"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/case_details"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/age_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age : "
        android:textSize="18dp"
        android:textColor="#989898"
        app:layout_constraintTop_toBottomOf="@id/patient_name_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="20"
        android:textSize="18dp"
        android:maxLines="1"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/patient_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number : "
        android:textSize="18dp"
        android:textColor="#989898"
        app:layout_constraintTop_toBottomOf="@id/age_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="207867803474"
        android:textSize="18dp"
        android:maxLines="1"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/age"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date : "
        android:textSize="18dp"
        android:textColor="#989898"
        app:layout_constraintTop_toBottomOf="@id/phone_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="20.04.2021"
        android:textSize="18dp"
        android:maxLines="1"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status : "
        android:textSize="18dp"
        android:textColor="#989898"
        app:layout_constraintTop_toBottomOf="@id/date_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Process"
        android:textSize="18dp"
        android:maxLines="1"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintEnd_toStartOf="@id/status_img"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/status_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_clock"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/status"
        app:layout_constraintBottom_toBottomOf="@id/status"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/case_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Case Description : "
        android:textSize="18dp"
        android:textColor="#989898"
        app:layout_constraintTop_toBottomOf="@id/status_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/case_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="iurfhoeriuhgwuiergbiyr"
        android:textSize="18dp"
        android:maxLines="1"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/case_label"
        app:layout_constraintStart_toStartOf="@id/patient_name_label"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"
        />
    <ImageButton
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:backgroundTint="#CC0000"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/logout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/logout"
        app:layout_constraintBottom_toBottomOf="@id/logout"
        app:layout_constraintStart_toStartOf="@id/logout"
        app:layout_constraintEnd_toEndOf="@id/logout"
        android:layout_marginEnd="0dp"/>
    <TextView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/logout_icon"
        app:layout_constraintTop_toTopOf="@id/logout_text"
        app:layout_constraintBottom_toBottomOf="@id/logout_text"
        app:layout_constraintStart_toEndOf="@id/logout_text"
        app:backgroundTint="@color/white"
        android:layout_marginStart="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>