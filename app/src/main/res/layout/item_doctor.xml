<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/call_item"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/doctor_img"
        android:layout_width="80dp"
        app:cardElevation="13dp"
        app:cardCornerRadius="20dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container"
        android:layout_marginStart="10dp"
        >
        <ImageView
            android:id="@+id/user_image"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/doc_pic_default"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green_circle"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/doc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        tools:text="Name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/doctor_img"
        app:layout_constraintTop_toTopOf="@id/doctor_img"
        app:layout_constraintBottom_toBottomOf="@id/doctor_img"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/specialistText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="specialist-"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/doc_name"
        app:layout_constraintStart_toEndOf="@id/doctor_img"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Doctor"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/doc_name"
        app:layout_constraintStart_toEndOf="@id/specialistText" />
    <ImageButton
        android:id="@+id/selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container"
        app:layout_constraintBottom_toBottomOf="@id/container"
        android:background="@drawable/gray_radio_button"
        android:layout_marginEnd="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>