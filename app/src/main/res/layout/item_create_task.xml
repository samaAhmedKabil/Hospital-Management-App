<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/btn_delete_task"
        android:layout_width="30dp"
        android:src="@drawable/ic_delete"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/text_todo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_delete_task"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="jvbedhfvowihebhiv"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_delete_task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_delete_task" />

</androidx.constraintlayout.widget.ConstraintLayout>